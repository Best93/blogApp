
<% include ../partials/header %>
<section class="padding">
        
        <div class="container p-3">
                <div class="jumbotron">
                               
                                <div>  <h1>Blogs Posts</h1></div>
                                <a href="/blogs/new" ><i class="far fa-plus-square fa-2x"></i></a>
                                <h6>Share Your Experience!</h6>
                </div>
                
                <div class="content">
                                <% blogs.forEach(function(blog) {%>
                                        <div class="row">
                                                <div class="col-md">
                                                   <div class="round-container"><a class="h5"  href="/blogs/<%= blog._id %>"><img class="rounded" src= "<%= blog.image %> "></a></div>
                                                </div>
                                                
                                                <div class="col-md">
                                                         <div><a class="h5"  href="/blogs/<%= blog._id %>"> <%= blog.name %> </a></div>
                                                
                                                         <div><span> <%= moment(blog.createdAt).fromNow() %></span></div>
                                                                
                                                         <div><p> <%- blog.description.substring(0, 20) %> ...</p></div>
                                                         <div><a class="btn btn-outline-info" href="/blogs/<%= blog._id %>">Read More
                                                          <i class="fas fa-chevron-right"></i></a></div>
                                                </div>
                                                
                                                
                                               
                                        </div>
                                        <div class="dropdown-divider"></div>
                                       
                                    <%}) %>
                                
                 </div>  

                
                      
              
        </div>
</section>

